<%- include("partials/header") %>
<div class="container">
	<h1>Edit Comic</h1>
<form action="/comic/<%= comic._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title"  value="<%= comic.title %>">
  </div>
  <div class="mb-3">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description" value="<%= comic.description %>">
  </div>
	
	<div class="mb-3">
    <label for="author">Author</label>
    <input type="text" class="form-control" name="author" value="<%= comic.author %>">
  </div>
	<div class="mb-3">
    <label for="publisher">Publisher</label>
    <input type="text" class="form-control" name="publisher" value="<%= comic.publisher %>">
  </div>
	<div class="mb-3">
    <label for="date">Date</label>
    <input type="date" class="form-control" name="date" value="<%= comic.date.toISOString().split('T')[0] %>">
  </div>
	<div class="mb-3">
    <label for="series">Series</label>
    <input type="text" class="form-control" name="series" value="<%= comic.series %>">
  </div>
	<div class="mb-3">
    <label for="issue">Issue</label>
    <input type="number" class="form-control" name="issue" value="<%= comic.issue %>">
  </div>
	<div class="mb-3">
    <label for="genre">Genre</label>
    <select class="form-control" id="genre" name="genre">
		<option disabled> -- Choose Below --</option>
		<option <%= comic.genre === 'superhero' ? 'seleced' : '' %>>Superhero</option>
		<option <%= comic.genre === 'manga' ? 'seleced' : '' %>>Manga</option>
		<option <%= comic.genre === 'slice-of-life' ? 'seleced' : '' %>>Slice-of-Life</option>
		<option <%= comic.genre === 'humor' ? 'seleced' : '' %>>Humor</option>
		<option <%= comic.genre === 'sci-fi' ? 'seleced' : '' %>>Sci-fi</option>
		<option <%= comic.genre === 'fantasy' ? 'seleced' : '' %>>Fantasy</option>
		<option <%= comic.genre === 'horror' ? 'seleced' : '' %>>Horror</option>
		<option <%= comic.genre === 'action' ? 'seleced' : '' %>>Action</option>
		<option <%= comic.genre === 'nonfiction' ? 'seleced' : '' %>>Nonfiction</option>
		</select>
  </div>
	<div class="mb-3 form-check">
		 <input type="checkbox" class="form-check-input" name="color" <%= comic.color ? 'checked' : '' %>>
    <label for="color">Color?</label>
   
  </div>
	
  <div class="mb-3">
    <label for="image">Link to Image</label>
    <input type="text" class="form-control" name="image" value="<%= comic.image %>" >
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
	
</div>



